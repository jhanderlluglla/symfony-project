{% extends "@FOSUser/layout.html.twig" %}

{% trans_default_domain 'FOSUserBundle' %}

{% block fos_user_content %}
    <header class="header">
        <div class="container" >
            <a href="/">
                <img src="/img/home/logo.png" height="41" width="178">
            </a>
        </div>
    </header>
    <div class="container">

        <div class="content">
            <h2>{{ 'registration.confirmed'|trans({'%username%': user.fullname}) }}</h2>
        </div>

        {% if targetUrl %}
            <p><a href="{{ targetUrl }}">{{ 'registration.back'|trans }}</a></p>
        {% endif %}
    </div>

{% endblock fos_user_content %}

{% block fos_user_style %}
    <style>
        .header {
            padding: 20px 0;
            background-color: #fff;
        }
        .content {
            padding: 10vw 0 1vw;
        }
    </style>

{% endblock fos_user_style %}