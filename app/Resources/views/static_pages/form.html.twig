{% trans_default_domain 'static_page' %}

<div class="row">
    {{ form_start(form) }}
        <div class="col-lg-9 col-lg-offset-1">
            {{ form_row(form.name) }}
            {{ form_row(form.identificator) }}
            {{ form_row(form.language) }}
        </div>
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-content">
                    {{ form_widget(form.pageContent) }}
                </div>
            </div>
            <div class="ibox m-t-n-sm">
                <div class="ibox-content text-right">
                    {{ form_widget(form.save) }}
                </div>
            </div>
        </div>
    {{ form_end(form) }}
</div>
<script src="https://cloud.tinymce.com/stable/tinymce.min.js?apiKey={{ tinymce_key }}"></script>
<script src="{{ asset('js/front/copywriting/tinymce_init.js') }}"></script>
