{% extends 'layout.html.twig' %}

{% trans_default_domain 'pages' %}

{% block title %}
    {{ 'edit_title'|trans }}
{% endblock %}

{% block breadcrumb %}
    {{ include('breadcrumb/article_blog.html.twig', {'childrens': [block('title')], 'link': 'article_blog'})}}
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset('css/admin/plugins/summernote/summernote.css') }}" rel="stylesheet">
    <link href="{{ asset('css/admin/plugins/summernote/summernote-bs3.css') }}" rel="stylesheet">
{% endblock %}

{% block content %}
    {% include "article_blog/form.html.twig" %}
{% endblock %}

{% block javascript %}
    {{ parent() }}
    <script type="text/javascript">
        var height = 500;
    </script>
    <script src="{{ asset('js/admin/plugins/summernote/summernote_0.8.8.js') }}"></script>
    <script src="{{ asset('js/front/init_summernote.js') }}"></script>
{% endblock %}