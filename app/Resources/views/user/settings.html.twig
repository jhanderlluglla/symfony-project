{% extends 'layout.html.twig' %}

{% trans_default_domain 'user' %}

{% block title %}
    {{ 'title_email_notification'|trans }}
{% endblock %}

{% block content %}
    <div class="row horizontal-line">
        <div class="col-lg-8">
            {{ form_start(form) }}
            {{ form_row(form[constant('CoreBundle\\Entity\\User::NOTIFICATION_NEW_PROPOSAL')]) }}

            <div class="subSetting">
                <div class="form-group">
                    <div class="col-sm-3"></div>
                    <div class="col-sm-9">
                        <label class="m-l-lg">
                            {{ form_widget(form.notification_new_proposal_reminder, {label: false}) }}
                            {{ 'profile.settings.notification_new_proposal_reminder.part_1'|trans }}
                            {{ form_widget(form['notification_new_proposal_reminder_frequency'], {'attr': {'class': 'subSetting'}}) }}
                            {{ 'profile.settings.notification_new_proposal_reminder.part_2'|trans }}
                        </label>
                    </div>
                </div>
            </div>

            {{ form_widget(form) }}
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}