{% extends 'layout.html.twig' %}

{% trans_default_domain 'pages' %}

{% block title %}
    {{ 'add_title'|trans }}
{% endblock %}

{% block breadcrumb %}
    {{ include('breadcrumb/settings.html.twig', {'childrens': [
        {'name': 'title'|trans, 'path': 'admin_pages'},
        {'name': 'home_page'|trans, 'path': 'pages_homepage'},
        block('title')
    ]}) }}
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset('css/admin/plugins/summernote/summernote.css') }}" rel="stylesheet">
    <link href="{{ asset('css/admin/plugins/summernote/summernote-bs3.css') }}" rel="stylesheet">
{% endblock %}

{% block content %}
    {% include "pages/homepage/form.html.twig" %}
{% endblock %}

{% block javascript %}
    {{ parent() }}
    <script>
        var height = 300;
    </script>
    <script src="{{ asset('js/admin/plugins/summernote/summernote_0.8.8.js') }}"></script>
    <script src="{{ asset('js/front/init_summernote.js') }}"></script>
    <script src="{{ asset('js/front/pages/manage_items.js') }}"></script>
{% endblock %}