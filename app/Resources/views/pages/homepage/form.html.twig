{% trans_default_domain 'pages' %}

<div class="row">
    <div class="col-lg-offset-2 col-lg-8">
        {{ form_start(form, {'attr': {'class': 'edit-homepage' }}) }}
        {{ form_errors(form) }}

        <div class="form-group">
            <h3>{{ form_label(form) }}</h3>
        </div>

        <div class="form-block">
            {{ form_row(form.language) }}
        </div>

        <div class="form-block clearfix">
            <div class="row">
                <h4 class="form-block__title">
                    {{ form_label(form.topList) }}
                    <i class="fa fa-question-circle-o"></i>
                    <img class="form-block__screenshot" src="{{ asset('/img/screens/screen-1.jpg') }}" alt="homepage screenshot">
                </h4>
            </div>
            {{ form_widget(form.topList) }}
            <div class="form-tooltip">{{'form.empty_tooltip'| trans }}</div>
            <button class="btn btn-primary add-item-list pull-right"><i class="fa fa-plus"></i></button>
        </div>

        <div class="form-block">
            <div class="row">
                <h4 class="form-block__title">
                    {{ form_label(form.topButton) }}
                    <i class="fa fa-question-circle-o"></i>
                    <img class="form-block__screenshot" src="{{ asset('/img/screens/screen-2.jpg') }}" alt="homepage screenshot">
                </h4>
            </div>
            {{ form_widget(form.topButton) }}
        </div>

        <div class="form-block clearfix">
            <div class="row">
                <h4 class="form-block__title">
                    {{ form_label(form.blockContainer) }}
                    <i class="fa fa-question-circle-o"></i>
                    <img class="form-block__screenshot" src="{{ asset('/img/screens/screen-3.jpg') }}" alt="homepage screenshot">
                </h4>
            </div>
            {{ form_widget(form.blockContainer) }}
            <div class="form-tooltip">{{'form.empty_tooltip'| trans }}</div>
            <button class="btn btn-primary add-block-with-button pull-right"><i class="fa fa-plus"></i></button>
        </div>

        <div class="form-block">
            <div class="row">
                <h4 class="form-block__title">
                    {{ form_label(form.textBlock) }}
                    <i class="fa fa-question-circle-o"></i>
                    <img class="form-block__screenshot" src="{{ asset('/img/screens/screen-4.jpg') }}" alt="homepage screenshot">
                </h4>
            </div>
            {{ form_widget(form.textBlock) }}
        </div>

        <div class="form-block clearfix">
            <div class="row">
                <h4 class="form-block__title">
                    {{ form_label(form.listBlock) }}
                    <i class="fa fa-question-circle-o"></i>
                    <img class="form-block__screenshot" src="{{ asset('/img/screens/screen-5.jpg') }}" alt="homepage screenshot">
                </h4>
            </div>
            {{ form_widget(form.listBlock) }}
            <div class="form-tooltip">{{'form.empty_tooltip'| trans }}</div>
            <button class="btn btn-primary add-item-to-list pull-right"><i class="fa fa-plus"></i></button>
        </div>

    </div>

    <div class="col-sm-offset-3 col-sm-9 col-lg-offset-4 col-lg-6 m-b-lg">
        {{ form_widget(form.submit, {'attr': {'class': 'btn btn-primary btn-sm' }}) }}
    </div>

    {{ form_end(form) }}
</div>

