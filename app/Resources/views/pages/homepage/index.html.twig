{% extends 'layout.html.twig' %}

{% trans_default_domain 'pages' %}

{% block title %}
    {{ 'home_page'|trans }}
{% endblock %}

{% block breadcrumb %}
    {{ include('breadcrumb/settings.html.twig', {'childrens': [
        {'name': 'title'|trans, 'path': 'admin_pages'},
        block('title')
    ]}) }}
{% endblock %}

{% block action %}
    <div class="col-sm-6">
        <div class="title-action">
            <a class="btn btn-primary btn-sm" href="{{ path('pages_homepage_add')}}">{{ 'add_version'|trans }}</a>
        </div>
    </div>
{% endblock %}

{% block content %}
    <div class="ibox-content">
        <table class="footable table table-striped">
            <thead>
            <tr>
                <th>{{ 'table.language'|trans }}</th>
                <th>{{ 'table.actions'|trans }}</th>
            </tr>
            </thead>
            <tbody>
            {% for element in collection %}
                <tr>
                    <td>{{ element.language }}</td>
                    <td>
                        <div class="buttons-wrapper">
                            <a class="btn btn-primary" href="{{ path('pages_homepage_edit', {'id':element.id}) }}" title="{{ 'table.edit'|trans }}"><i class="fa fa-edit"></i>{{ 'table.edit'|trans }}</a>
                            <a class="btn btn-danger delete" href="{{ path('pages_homepage_delete', {'id':element.id}) }}" title="{{ 'table.delete'|trans }}"><i class="fa fa-trash"></i>{{ 'table.delete'|trans }}</a>
                        </div>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
