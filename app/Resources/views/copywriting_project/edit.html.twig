{% extends 'layout.html.twig' %}

{% form_theme form "form/theme.html.twig" %}

{% trans_default_domain 'copywriting' %}

{% block title %}
    {{ 'edit_title'|trans }}
{% endblock %}

{% block breadcrumb %}
    {{ include('breadcrumb/copywriting.html.twig',
        {'childrens': [
            {'name': 'copywriting.pending'|trans({}, 'menu'), 'path': 'copywriting_order_list', 'status': 'waiting'},
            block('title')
        ]})
    }}
{% endblock %}

{% if form.writer_category is defined %}
    {% form_theme form.writer_category _self %}
{% endif %}

{% block radio_widget %}
    {% spaceless %}
        <input type="radio" {{ block('widget_attributes') }}{% if value is defined %} value="{{ value }}"{% endif %}{% if checked %} checked="checked"{% endif %} />
    {% endspaceless %}
{% endblock radio_widget %}

{% block content %}

    <div class="fixed-price">
        <span>{{ 'table.price'|trans({}, 'general') }}: </span>
        <span id="price">0â‚¬</span>
    </div>
    {{ form_start(form, {
        'attr': {
            'class': 'high-inputs',
            'id': 'create-copywriting-project'
        }
    }) }}
    {{ form_errors(form) }}
    <div class="steps-item">
        <div class="step-number">
            {{ 'form.step'|trans }} 1
        </div>
        <div class="step-content">
            <p class="step-heading">Select from the existed projects or create new</p>
            <div class="step-rows">
                <div class="row">
                    <div class="col-lg-7">
                        <div class="flex-group">
                            <div class="flex-group_input m-b-sm">
                                {{ form_row(form.load_template, {
                                    'attr': {
                                            'data-bind':"value: selectedTemplate,
                                                    event: {change: loadTemplate}",
                                            'data-url':path('copywriting_template_fetch', {'id':"1"})
                                        }
                                    })
                                }}
                            </div>
                            <span class="flex-group_divider m-b-sm">or</span>
                            <div class="m-b-sm">
                                <button class="btn btn-primary j-create-new"
                                        data-bind="click: showNextStep, disable: articles().length">{{ 'create_new'| trans }}</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="steps-item {% if form.vars.valid %} disabled {% endif %}">
        <div class="step-number">
            {{ 'form.step'|trans }} 2
        </div>
        <div class="step-content">
            <p class="step-heading">Enter information about project</p>
            <div class="step-rows">
                <div class="row j-floating-row">
                    <div class="col-lg-7">
                        {{ form_row(form.title, {'attr':{'data-bind': "value: title, valueUpdate: ['afterkeydown', 'input']"}}) }}
                        {{ form_row(form.description, {'attr':{'data-bind': "value: description"}}) }}

                        <div class="form-group m-t-lg">
                            <div class="form-inline">
                                <div class="input-group">
                                    <div class="radio">
                                        <label for="project_type_fix" class="control-label">
                                            <span class="checkbox_radio_widget_wrapper">
                                                <input class="control-input"
                                                       type="radio"
                                                       id="project_type_fix"
                                                       name="copywriting_project[recurrent]"
                                                       value="0"
                                                       data-bind="checked: recurrent, click: recurrentCheck">
                                                <label for="project_type_fix"></label>
                                            </span>
                                            {{ 'form.fix'|trans }}
                                        </label>
                                    </div>
                                    <div class="radio">
                                        <label for="project_type_recurrent" class="control-label">
                                            <span class="checkbox_radio_widget_wrapper">
                                                <input  class="control-input"
                                                        type="radio"
                                                        id="project_type_recurrent"
                                                        name="copywriting_project[recurrent]"
                                                        value="1"
                                                        data-bind="checked: recurrent, click: recurrentCheck"
                                                >
                                                <label for="project_type_recurrent"></label>
                                            </span>
                                            {{ 'form.recurrent'|trans }}
                                            <button type="button"
                                                    class="info-button-icon"
                                                    data-toggle="popover-floating"
                                                    data-placement="auto right"
                                                    title=""
                                                    data-float-title="{{ 'form.recurrent'|trans }}"
                                                    data-content="{{ 'form.recurrent_popup_mesage'|trans }}">
                                                <svg><use xlink:href="#info-icon"></use></svg>
                                            </button>
                                        </label>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-lg-6 m-b-md">
                                <div class="form-group">
                                    <label  for="number_of_articles" class="control-label">{{ 'form.number_articles'|trans }}</label>
                                    <input
                                            id="number_of_articles"
                                            required
                                            type="number"
                                            placeholder="{{ 'form.number_placeholder'|trans }}"
                                            min="1"
                                            max="150"
                                            class="form-control"
                                            data-bind="value: articlesCount, disable: articles().length">
                                </div>
                            </div>
                            <div class="col-lg-6 m-b-md">
                                <div class="form-group">
                                    <label for="number_of_words" class="control-label">{{ 'form.number_words'|trans }}</label>
                                    <input
                                            id="number_of_words"
                                            required
                                            placeholder="{{ 'form.number_placeholder'|trans }}"
                                            type="number"
                                            min="50"
                                            max="999999"
                                            class="form-control"
                                            data-bind="value: wordsCount, disable: articles().length">
                                </div>
                            </div>
                        </div>


                        <div class="form-group" data-bind="visible: isRecurrent()">
                            <div class="row">
                                <div class="col-lg-6  m-b-sm">
                                    <label class="control-label" for="recurrent_period">{{ 'form.period'|trans }}</label>
                                    <div class="input-group">
                                        {{ form_widget(form.recurrent_period, {'attr':{'data-bind': "value: recurrentPeriod"}}) }}
                                        <span class="custom-addon input-group-addon">{{ 'form.days'|trans }}</span>
                                    </div>
                                </div>
                                <div class="col-lg-6">
                                    <label for="recurrent_total" class="control-label">{{ 'form.recurrent_total'|trans }}</label>
                                    {{ form_widget(form.recurrent_total, {'attr':{'data-bind': "value: recurrentTotal"}}) }}
                                </div>
                                <div class="col-lg-12">
                                    <p class="recurrent-calculate">
                                        {{ 'reccurent_message.part1'|trans }}
                                        <span data-bind="text: articlesCount"></span>
                                        {{ 'reccurent_message.part2'|trans }}
                                        <span data-bind="text: recurrentPeriod"></span>
                                        {{ 'reccurent_message.part3'|trans }}
                                        <span data-bind="text: recurrentDaysTotal"></span>
                                        {{ 'reccurent_message.part4'|trans }}
                                        <span data-bind="text: recurrentTotal"></span>
                                        {{ 'reccurent_message.part5'|trans }}</p>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="form_exchange_site" class="control-label">{{ 'form.exchange_site'|trans }}</label>
                            <button type="button"
                                    class="info-button-icon"
                                    data-toggle="popover-floating"
                                    data-placement="auto right"
                                    title=""
                                    data-float-title="{{ 'form.exchange_site'|trans }}"
                                    data-content="{{ 'form.exchange_site_popup_mesage'|trans }}">
                                <svg><use xlink:href="#info-icon"></use></svg>
                            </button>
                            {{ form_widget(form.exchange_site, {'id': 'form_exchange_site', 'attr':{'data-bind': "value: exchangeSite, disable: articles().length"}}) }}
                        </div>

                        <div class="form-group">
                            <label for="form_language" class="control-label">{{ 'form.language'|trans }}</label>
                            <button type="button"
                                    class="info-button-icon"
                                    data-toggle="popover-floating"
                                    data-placement="auto right"
                                    title=""
                                    data-float-title="{{ 'form.language'|trans }}"
                                    data-content="{{ 'form.language_popup_message'|trans }}">
                                <svg><use xlink:href="#info-icon"></use></svg>
                            </button>
                            {{ form_widget(form.language, {'id': 'form_language', 'attr': {'data-bind':"disable: articles().length"}}) }}
                        </div>

                        <div class="form-group">
                            <div class="text-right">
                                <button class="btn btn-primary" data-bind="click: addMultiple, disable: articles().length">{{ 'form.next'|trans }}</button>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-5">
                        {% include ':form:info-box.html.twig' with {'title': 'form.info-box_title', 'content': 'form.info-box_text'|trans} %}
                    </div>
                </div>

            </div>
        </div>
    </div>

    {% do form.recurrent.setRendered %}

    <div class="steps-item float" data-bind="css: { disabled: articles().length == 0 }">
        <div class="step-number">
            {{ 'form.step'|trans }} 3
        </div>
        <div class="step-content">
            <p class="step-heading">{{ form_label(form.writer_category) }}</p>
            <div class="step-rows">
                {{ form_widget(form.writer_category) }}
                <div class="slick_writers" data-bind="foreach: writers">
                        <label class="card-writer">
                            <input type="checkbox" class="card-writer__checkbox" name="checkbox-writer" data-bind="value: id, checked: chosen"/>
                            <div class="card-writer__wrap">
                                <div class="card-writer__main">
                                    <h3 class="card-writer__title" data-bind="text: username"></h3>
                                    <div class="card-writer__text">
                                        <div class="card-writer__img-avatar" data-bind="style: { 'background-image': 'url(' + avatar() + ')' }">
                                        </div>

                                        <!-- ko if: isSetLikes() -->
                                        <div class="small-text">
                                            {{ 'personal_stats'|trans }}
                                            <p class="raiting">
                                                <span><i class="fa fa-thumbs-up"></i>  <b data-bind="text: likes"></b></span>
                                                <span><i class="fa fa-thumbs-down"></i> <b data-bind="text: dislikes"></b></span>
                                            </p>
                                        </div>
                                        <!-- /ko -->
                                    </div>
                                </div>
                                <footer class="card-writer__footer">
                                    <p data-bind="text: getDeadlineMessage()"></p>
                                </footer>
                            </div>
                        </label>
                </div>
                <input type="hidden" name="chosen_writers" value=""/>
                <div class="articles-nav tag-navs">


                    <a class="btn btn-primary j-all-articles" data-toggle="tab" data-bind="click: clearNavTabs" aria-expanded="true" href="#idAll" title="All articles">
                        <!-- ko if: articles().length > 1 -->
                        {{ 'articles.all_articles' | trans }}<span> (<span data-bind="text: articles().length - 1"></span> {{ 'form.items' | trans }})</span>
                        <!-- /ko -->
                        <!-- ko if: articles().length == 1 -->
                        <span data-bind="text: myTitle" >{{ 'articles.new_article'|trans }}</span>
                        <!-- /ko -->
                    </a>
                    <!-- ko if: articles().length > 1 -->
                    <button class="btn btn-link" data-bind="click: showArticleNav">
                        <!-- ko if: buttonStatus -->
                        {{ 'form.hide_all' | trans }} <i class="fa fa-chevron-up"></i>
                        <!-- /ko -->
                        <!-- ko ifnot: buttonStatus -->
                        {{ 'form.show_all' | trans }} <i class="fa fa-chevron-down"></i>
                        <!-- /ko -->
                    </button>
                    <ul class="nav nav-tabs" data-bind="foreach: articles">
                        <!-- ko ifnot: isAllTab -->
                        <li data-bind="attr: { 'aria-controls': id }, css: { active: $index() == 0 }">
                            <a data-toggle="tab" aria-expanded="true" data-bind="attr: { title: title, href: href}">
                                <span data-bind="text: titleTab"></span>
                                <!-- ko if: $parent.articles().length > 2 -->
                                    <i class="fa fa-lg fa-fw fa-times-circle" data-bind="click: $parent.removeArticle"></i>
                                <!-- /ko -->
                            </a>
                        </li>
                        <!-- /ko -->
                        </ul>
                    <!-- /ko -->
                </div>
                <div class="row j-floating-row">
                    <div class="col-lg-7">
                        <div class="tab-content">
                            <!-- ko foreach: articles -->
                            <div class="tab-pane" data-bind="attr: { id: id }, css: { active: $index() == 0 }">
                                <div data-bind="event: {change: $parent.changeOnAllTab}">
                                    <input type="hidden"
                                           data-bind="value: wordsNumber,
                                           attr: {
                                                id: 'copywriting_project_orders_' + $index() + '_wordsNumber',
                                                name: 'copywriting_project[orders][' + $index() + '][wordsNumber]'
                                            }"
                                           required="required" pattern=".{1,}" class="form-control" />
                                    <div class="form-group">
                                        <label class="control-label required"
                                               data-bind="attr: { for: 'copywriting_project_orders_' + $index() + '_title' }">{{ 'form.title_text'|trans }}</label>
                                        <input type="text"
                                               maxlength="100"
                                               data-bind="
                                                       value: title,
                                                       valueUpdate: ['afterkeydown', 'input'],
                                                       disable: isAllTab,
                                                       attr: {
                                                           id: 'copywriting_project_orders_' + $index() + '_title',
                                                           name: 'copywriting_project[orders][' + $index() + '][title]' }"
                                               required="required"
                                               class="form-control" />
                                    </div>
                                    <div class="form-group">
                                        <label class="control-label"
                                               data-bind="attr: { for: 'copywriting_project_orders_' + $index() + '_instructions' }">{{ 'form.instructions'|trans }}</label>
                                        <textarea data-bind="value: instructions,
                                                        valueUpdate: ['afterkeydown', 'input'],
                                                        disable: isAllTab,
                                                        attr: {
                                                            id: 'copywriting_project_orders_' + $index() + '_instructions',
                                                            name: 'copywriting_project[orders][' + $index() + '][instructions]'
                                                        }"
                                                maxlength="3000"
                                                class="form-control">
                                        </textarea>
                                    </div>
                                    <hr>
                                    <div class="form-group">
                                        <label class="control-label bold-label">{{ 'form.meta_title'|trans }}</label>
                                        <div class="checkbox">
                                            <label data-bind="attr: { for: 'copywriting_project_orders_' + $index() + '_metaTitle' }" class="radio-inline">
                                                <span class="checkbox_radio_widget_wrapper">
                                                    <input type="checkbox"
                                                           data-bind="checked: metaTitle,
                                                           attr: {
                                                               id: 'copywriting_project_orders_' + $index() + '_metaTitle',
                                                               name: 'copywriting_project[orders][' + $index() + '][metaTitle]'
                                                           }"
                                                           value="1" />
                                                    <label data-bind="attr: { for: 'copywriting_project_orders_' + $index() + '_metaTitle' }"></label>
                                                </span>
                                                {{ 'attributes.meta_title.description'|trans }}
                                            </label>
                                            <button type="button"
                                                    class="info-button-icon"
                                                    data-toggle="popover-floating"
                                                    data-placement="auto right"
                                                    title=""
                                                    data-float-title="{{ 'form.meta_title'|trans }}"
                                                    data-content="{{ 'attributes.meta_title.popup_message'|trans }}">
                                                <svg><use xlink:href="#info-icon"></use></svg>
                                            </button>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="control-label bold-label">{{ 'form.meta_description'|trans }}</label>
                                        <div class="checkbox">
                                            <div class="row">
                                                <div class="col-lg-7">
                                                    <label data-bind="attr: { for: 'copywriting_project_orders_' + $index() + '_metaDescription' }" class="radio-inline">
                                                        <span class="checkbox_radio_widget_wrapper">
                                                            <input type="checkbox"
                                                                   data-bind="checked: metaDescription,
                                                                   click: $parent.calculatePrice(),
                                                                   attr: {
                                                                       id: 'copywriting_project_orders_' + $index() + '_metaDescription',
                                                                       name: 'copywriting_project[orders][' + $index() + '][metaDescription]'
                                                                   }"
                                                                   value="1" />
                                                            <label data-bind="attr: { for: 'copywriting_project_orders_' + $index() + '_metaDescription' }"></label>
                                                        </span>
                                                        {{ 'attributes.meta_description.description'|trans }}
                                                    </label>
                                                    <button type="button"
                                                            class="info-button-icon"
                                                            data-toggle="popover-floating"
                                                            data-placement="auto right"
                                                            title=""
                                                            data-float-title="{{ 'form.meta_description'|trans }}"
                                                            data-content="{{ 'attributes.meta_description.popup_message'|trans }}">
                                                        <svg><use xlink:href="#info-icon"></use></svg>
                                                    </button>
                                                </div>
                                                <div class="col-lg-5">
                                                    <div>
                                                        {{ 'form.meta_description_hint'|trans({'%cost%': additionalData.prices.price_for_meta_description}) }}
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <hr>
                                    {#  headings H1 H2 ...  #}
                                    <div class="form-group">
                                        <label class="control-label bold-label">{{ 'form.header_one_set'|trans }}</label>
                                        <div class="checkbox">
                                            <label data-bind="attr: { for: 'copywriting_project_orders_' + $index() + '_headerOneSet' }" class="radio-inline">
                                                <span class="checkbox_radio_widget_wrapper">
                                                    <input type="checkbox"
                                                           data-bind="checked: headerOneSet,
                                                            attr: {
                                                                id: 'copywriting_project_orders_' + $index() + '_headerOneSet',
                                                                name: 'copywriting_project[orders][' + $index() + '][headerOneSet]'
                                                            }"
                                                           value="1" />
                                                    <label data-bind="attr: { for: 'copywriting_project_orders_' + $index() + '_headerOneSet' }"></label>
                                                </span>
                                                {{ 'attributes.header_h1.description'|trans }}
                                            </label>
                                            <button type="button"
                                                    class="info-button-icon"
                                                    data-toggle="popover-floating"
                                                    data-placement="auto right"
                                                    title=""
                                                    data-float-title="{{ 'form.header_one_set'|trans }}"
                                                    data-content="{{ 'attributes.header_h1.popup_message'|trans }}">
                                                <svg><use xlink:href="#info-icon"></use></svg>
                                            </button>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="control-label bold-label"
                                               data-bind="attr: { for: 'copywriting_project_orders_' + $index() + '_headerTwoStart' }">
                                            {{ 'form.header_two_start_end'|trans }}
                                        </label>
                                        <div class="form-inline minmaxrange j-pair-num">
                                            <span class="control-label">{{ 'attributes.headers.part1'|trans }}</span>
                                            <div class="input-group">
                                                <input type="number"
                                                    range-type="min"
                                                       min="0"
                                                       max="999"
                                                       step="1"
                                                       placeholder="{{ 'form.min'|trans }}"
                                                       data-pair = "min"
                                                       data-bind="value: headerTwoStart,
                                                            valueUpdate: ['afterkeydown', 'input'],
                                                            attr: {
                                                                id: 'copywriting_project_orders_' + $index() + '_headerTwoStart',
                                                                name: 'copywriting_project[orders][' + $index() + '][headerTwoStart]',
                                                                required: headerTwoRequired
                                                            },
                                                            event: { change: $parent.headerTwoRange }"
                                                       class="form-control form-control_small" />
                                            </div>
                                            <span class="control-label">{{ 'attributes.headers.part2'|trans }}</span>
                                            <div class="input-group">
                                                <input type="number"
                                                        range-type="max"
                                                       min="0"
                                                       max="999"
                                                       step="1"
                                                       placeholder="{{ 'form.max'|trans }}"
                                                       data-pair = "max"
                                                       data-bind="value: headerTwoEnd,
                                                            valueUpdate: ['afterkeydown', 'input'],
                                                            attr: {
                                                                id: 'copywriting_project_orders_' + $index() + '_headerTwoEnd',
                                                                name: 'copywriting_project[orders][' + $index() + '][headerTwoEnd]',
                                                                required: headerTwoRequired
                                                            },
                                                            event: { change: $parent.headerTwoRange }"
                                                       class="form-control form-control_small" />
                                            </div>
                                            <span class="control-label">
                                                            {{ 'attributes.headers.part3'|trans({'%header%': 'H2'}) }}
                                                <button type="button"
                                                        class="info-button-icon"
                                                        data-toggle="popover-floating"
                                                        data-placement="auto right" title=""
                                                        data-float-title="{{ 'form.header_two_start_end'|trans }}"
                                                        data-content="{{ 'attributes.header_h2.popup_message'|trans }}">
                                                    <svg><use xlink:href="#info-icon"></use></svg>
                                                </button>
                                            </span>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="control-label bold-label"
                                               data-bind="attr: { for: 'copywriting_project_orders_' + $index() + '_headerThreeStart' }">
                                            {{ 'form.header_three_start_end'|trans }}
                                        </label>
                                        <div class="form-inline minmaxrange j-pair-num">
                                            <span class="control-label">{{ 'attributes.headers.part1'|trans }}</span>
                                            <div class="input-group">
                                                <input type="number"
                                                    range-type="min"
                                                       min="0"
                                                       max="999"
                                                       step="1"
                                                       placeholder="{{ 'form.min'|trans }}"
                                                       data-pair = "min"
                                                       data-bind="value: headerThreeStart,
                                                        valueUpdate: ['afterkeydown', 'input'],
                                                        attr: {
                                                            id: 'copywriting_project_orders_' + $index() + '_headerThreeStart',
                                                            name: 'copywriting_project[orders][' + $index() + '][headerThreeStart]',
                                                            required: headerThreeRequired
                                                        }"
                                                       class="form-control form-control_small" />
                                            </div>
                                            <span class="control-label">{{ 'attributes.headers.part2'|trans }}</span>
                                            <div class="input-group">
                                                <input type="number"
                                                    range-type="max"
                                                       min="0"
                                                       max="999"
                                                       step="1"
                                                       placeholder="{{ 'form.max'|trans }}"
                                                       data-pair = "max"
                                                       data-bind="value: headerThreeEnd,
                                                       valueUpdate: ['afterkeydown', 'input'],
                                                       attr: {
                                                            id: 'copywriting_project_orders_' + $index() + '_headerThreeEnd',
                                                            name: 'copywriting_project[orders][' + $index() + '][headerThreeEnd]',
                                                            required: headerThreeRequired
                                                        }"
                                                       class="form-control form-control_small" />
                                            </div>
                                            <span class="control-label">
                                                            {{ 'attributes.headers.part3'|trans({'%header%': 'H3'}) }}
                                                <button type="button"
                                                        class="info-button-icon"
                                                        data-toggle="popover-floating"
                                                        data-placement="auto right"
                                                        title=""
                                                        data-float-title="{{ 'form.header_three_start_end'|trans }}"
                                                        data-content="{{ 'attributes.header_h3.popup_message'|trans }}">
                                                    <svg><use xlink:href="#info-icon"></use></svg>
                                                </button>
                                            </span>
                                        </div>
                                    </div>
                                    <hr>
                                    {#  font decoration #}
                                    <div class="form-group">
                                        <label class="control-label bold-label">{{ 'form.bold_text'|trans }}</label>
                                        <span class="inline-block control-label">({{ 'attributes.bold_text.description'|trans }})</span>
                                        <div class="form-inline">
                                            <div class="input-group">
                                                <div class="radio">
                                                    <label data-bind="attr: { for: 'copywriting_project_orders_' + $index() + '_boldText_0' }">
                                                        <span class="checkbox_radio_widget_wrapper">
                                                            <input type="radio"
                                                                   value="0"
                                                                   data-bind="checked: boldText,
                                                                   attr: {
                                                                        id: 'copywriting_project_orders_' + $index() + '_boldText_0',
                                                                        name: 'copywriting_project[orders][' + $index() + '][boldText]'
                                                                    }">
                                                            <label data-bind="attr: { for: 'copywriting_project_orders_' + $index() + '_boldText_0' }"></label>
                                                        </span>
                                                        {{ 'yes'|trans }}
                                                    </label>
                                                </div>
                                                <div class="radio">
                                                    <label data-bind="attr: { for: 'copywriting_project_orders_' + $index() + '_boldText_1' }">
                                                        <span class="checkbox_radio_widget_wrapper">
                                                            <input type="radio"
                                                                   value="1"
